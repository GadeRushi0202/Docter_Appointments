
@model Doctor_appointments.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<h1 class="text-center text-danger my-4">Delete Appointment</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg">
            <div class="card-body">
                <h3 class="text-center text-warning mb-4">Are you sure you want to delete this appointment?</h3>

                <h4 class="text-center text-secondary">Appointment Details</h4>
                <hr />

                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.AppointmentId)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.AppointmentId)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.PatientName)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PatientName)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Doctor.Name)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Doctor.Name)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.AppointmentDate)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.AppointmentDate)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.StartTime)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.StartTime)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.EndTime)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.EndTime)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.TotalFees)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.TotalFees)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.PaidFees)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PaidFees)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.RemainingFees)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.RemainingFees)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.TotalAppointmentTime)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.TotalAppointmentTime)
                    </dd>
                </dl>

                <div class="text-center">
                    <form asp-action="Delete">
                        <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                    </form>
                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
