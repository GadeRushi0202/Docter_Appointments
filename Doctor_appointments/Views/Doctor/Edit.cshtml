
@model Doctor_appointments.Models.Doctor

@{
    ViewData["Title"] = "Edit Doctor";
}

<h1 class="text-center text-primary mb-4">Edit Doctor</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body">
                <h4 class="card-title text-center text-secondary">Edit Doctor Details</h4>
                <hr />
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="DoctorId" class="form-label fw-bold"></label>
                        <input asp-for="DoctorId" class="form-control" readonly />
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FeesPerHour" class="form-label fw-bold"></label>
                        <input asp-for="FeesPerHour" class="form-control" />
                        <span asp-validation-for="FeesPerHour" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MobileNumber" class="form-label fw-bold"></label>
                        <input asp-for="MobileNumber" class="form-control" />
                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Experience" class="form-label fw-bold"></label>
                        <input asp-for="Experience" class="form-control" />
                        <span asp-validation-for="Experience" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Speciality" class="form-label fw-bold"></label>
                        <input asp-for="Speciality" class="form-control" />
                        <span asp-validation-for="Speciality" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Code" class="form-label fw-bold"></label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

