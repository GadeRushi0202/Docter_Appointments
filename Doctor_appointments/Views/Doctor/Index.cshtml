
@model IEnumerable<Doctor_appointments.Models.Doctor>

@{
    ViewData["Title"] = "Doctors List";
}

<h1 class="text-center text-primary mb-4">Doctors List</h1>

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover shadow-lg">
        <thead class="table-dark">
            <tr class="text-center">
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().DoctorId)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().FeesPerHour)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().MobileNumber)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Experience)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Speciality)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Code)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="8" class="text-center text-secondary">No doctors available.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr class="text-center align-middle">
                        <td>@Html.DisplayFor(modelItem => item.DoctorId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.FeesPerHour)</td>
                        <td>@Html.DisplayFor(modelItem => item.MobileNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.Experience)</td>
                        <td>@Html.DisplayFor(modelItem => item.Speciality)</td>
                        <td>@Html.DisplayFor(modelItem => item.Code)</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                @Html.ActionLink("Edit", "Edit", new { id = item.DoctorId }, new { @class = "btn btn-warning btn-sm me-2" })
                                @Html.ActionLink("Details", "Details", new { id = item.DoctorId }, new { @class = "btn btn-info btn-sm me-2" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.DoctorId }, new { @class = "btn btn-danger btn-sm" })
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
